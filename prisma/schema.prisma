generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id            String          @id @default(uuid())
  login         String          @unique
  password      String
  proxy         String? // Сделано необязательным
  method        Int // 1 или 2
  userAgent     String
  posts         Post[] // Без @relation(onDelete: Cascade)
  createdAt     DateTime        @default(now())
  ScheduledPost ScheduledPost[] // Без onDelete: Cascade
}

model Post {
  id        String   @id @default(uuid())
  accountId String
  content   String
  imageUrl  String?
  hashtags  String?
  targetUrl String?
  promoted  Boolean  @default(false)
  createdAt DateTime @default(now())

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade) // Устанавливаем каскадное удаление
}

model ScheduledPost {
  id          String   @id @default(uuid())
  accountId   String
  imageId     String?  @unique
  image       Image?   @relation("ImageToScheduledPost", fields: [imageId], references: [id])
  scheduledAt DateTime
  status      String // pending, done, failed, no_images, captcha_required
  createdAt   DateTime @default(now())

  promptText     String?
  promptImage    String?
  promptHashtags String?
  targetUrl      String?
  autoPost       Boolean? @default(false)
  cronExpression String?
  promotedOnly   Boolean? @default(false)
  useAiOnImage   Boolean? // Только для метода 2

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
}

model Image {
  id            String         @id @default(cuid())
  url           String
  isUsed        Boolean        @default(false)
  scheduledPost ScheduledPost? @relation("ImageToScheduledPost")
}
